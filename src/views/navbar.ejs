<nav class="navbar">
    <a href="/p/homepage">Home Page</a>

    <div class="dropdown">
        <a href="#" class="dropbtn"><%= username %></a>
        <div class="dropdown-content">
            <a href="#" id="logoutLink">Logout</a>
            <a href="/p/profile">Profile</a>
            <a href="/p/friends">Friends</a>
        </div>
    </div>
</nav>

<style>
    /* Body layout adjustment */
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    /* Navbar styling */
    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1em;
        background-color: #1e1e1e;
        border-bottom: 1px solid #333;
        height: 60px; /* Define fixed height */
        box-sizing: border-box;
        z-index: 1000;
    }

    .navbar a {
        text-decoration: none;
        padding: 0.5em 1em;
        color: #ff9800;
        font-weight: 500;
    }

    .navbar a:hover {
        text-decoration: underline;
        color: #e68900;
    }

    /* Dropdown menu styling */
    .dropdown {
        padding: 0.5em 1em;
        position: relative;
        display: inline-block;
    }

    .dropbtn {
        cursor: pointer;
        color: #ff9800;
        font-weight: 500;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        right: 0;
        min-width: 120px;
        background-color: #1e1e1e;
        border: 1px solid #333;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.6);
        z-index: 1;
    }

    .dropdown-content a {
        padding: 0.5em 1em;
        color: #ff9800;
        text-decoration: none;
        display: block;
        font-weight: 400;
    }

    .dropdown-content a:hover {
        background-color: #333;
        text-decoration: underline;
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    /* Main content wrapper ensures no overlap */
    .main-content {
        flex: 1; /* Pushes the content below the navbar dynamically */
        display: flex;
        flex-direction: column;
        box-sizing: border-box;
    }
</style>

<script>
    document.getElementById("logoutLink").addEventListener("click", async (event) => {
        event.preventDefault();
        try {
            const response = await fetch("/api/auth/logout", {
                method: "POST"
            });
            if (response.ok) {
                const result = await response.json();
                console.log(result.message);
                window.location.href = "/login";
            } else {
                console.error("Logout failed");
            }
        } catch (error) {
            console.error("Error:", error);
        }
    });
</script>

