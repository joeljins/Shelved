<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #121212;
            color: #f5f5f5;
        }

        .content {
            padding-top: 100px;
        }

        h1 {
            font-size: 2.5em;
            color: #ff9800;
            margin-top: 20px;
            margin-bottom: 10px;
            font-weight: 700;
        }

        h1 span {
            color: #ff9800;
        }

        .container {
            display: grid;
            gap: 20px;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            padding: 20px;
        }

        .media-item {
            background-color: #1e1e1e;
            border: 1px solid #333;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.6);
            transition: transform 0.3s;
        }

        .media-item:hover {
            transform: scale(1.05);
        }

        .poster {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }

        .content {
            padding: 15px;
        }

        .title {
            font-size: 18px;
            font-weight: bold;
            margin: 0;
            color: #ff9800;
        }

        .overview {
            font-size: 14px;
            margin: 10px 0;
            color: #bbb;
        }

        .rating {
            font-size: 14px;
            color: #888;
        }
    </style>
</head>
<body>
    <%- include('navbar', { username: username }) %>

    <div class="content">
        <h1>Welcome, <span><%= username %></span>!</h1>
        <div class="container">
            <% if (trendingData && trendingData.length > 0) { %>
                <% trendingData.forEach(media => { %>
                    <div class="media-item">
                        <img src="https://image.tmdb.org/t/p/w500<%= media.poster_path %>" alt="<%= media.name || media.title %> Poster" class="poster" />
                        <div class="content">
                            <p class="title"><%= media.name || media.title %></p>
                            <p class="overview"><%= media.overview ? media.overview.substring(0, 100) + '...' : 'No overview available.' %></p>
                            <p class="rating">Rating: <%= media.vote_average ? media.vote_average : 'N/A' %>/10</p>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</body>
</html>
