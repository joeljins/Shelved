<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        .content {
            padding-top: 100px;
        }

        h1 {
            font-size: 2.5em;
            color: #333;
            margin-top: 20px;
            margin-bottom: 10px;
            font-weight: 700;
        }

        h1 span {
            color: #0056b3;
        }

        .container {
            display: grid;
            gap: 20px;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            max-width: 1200px;
            padding: 20px;
        }

        .media-item {
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .media-item:hover {
            transform: scale(1.05);
        }

        .poster {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }

        .content {
            padding: 15px;
        }

        .title {
            font-size: 18px;
            font-weight: bold;
            margin: 0;
            color: #333;
        }

        .overview {
            font-size: 14px;
            margin: 10px 0;
            color: #666;
        }

        .rating {
            font-size: 14px;
            color: #888;
        }
    </style>
</head>
<body>
    <%- include('navbar', { username: username }) %>



    <div class="content">
        <h1>Welcome, <span><%= username %></span>!</h1>
        <div class="container" id="mediaContainer">
        </div>
    </div>

    <script>
        async function fetchTrendingMedia() {
            try {
                const response = await fetch('/api/services/trending?media_type=all&range=week');

                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                const data = await response.json();

                if (data && data.length > 0) {
                    const container = document.getElementById('mediaContainer');
                    container.innerHTML = '';  // Clear previous content

                    data.forEach(media => {
                        const mediaItem = document.createElement('div');
                        mediaItem.classList.add('media-item');
                        mediaItem.innerHTML = `
                            <img src="https://image.tmdb.org/t/p/w500${media.poster_path}" alt="${media.name || media.title} Poster" class="poster" />
                            <div class="content">
                                <p class="title">${media.name || media.title}</p>
                                <p class="overview">${media.overview ? media.overview.substring(0, 100) + '...' : 'No overview available.'}</p>
                                <p class="rating">Rating: ${media.vote_average ? media.vote_average : 'N/A'}/10</p>
                            </div>
                        `;
                        container.appendChild(mediaItem);
                    });
                } else {
                    console.error("No trending media found");
                }
            } catch (error) {
                console.error("Error fetching trending media:", error.message);
            }
        }

        fetchTrendingMedia();
    </script>
</body>
</html>

