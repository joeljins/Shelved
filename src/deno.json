{
   "imports": {
      "express": "npm:express@^4.21.1",
      "pg": "npm:pg@^8.13.1"
   },
   "fmt": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 3,
      "semiColons": true,
      "singleQuote": true,
      "proseWrap": "preserve",
      "include": ["src/"],
      "exclude": ["src/static"]
   },
   "tasks": {
      "dev": "deno run --allow-net --allow-read --allow-env --watch app/main.js",
      "format": "deno fmt --watch app",
      "start": "deno run --allow-net --allow-read --allow-env  app/main.js",
      "database": "deno run --allow-env --allow-net scripts/init-db.js"
   }
}
